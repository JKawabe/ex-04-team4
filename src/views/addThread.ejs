<!doctype html>
<html lang="ja">
  <%- include('head') %>
  <body class="thread-body">
    <%- include('header') %>
    <body>
        <div id="threadformtag">
            <form action="/threads" method="post">
                <div id="form-box">
                  <div class="title-form-div">
                    <input
                    type="text"
                    name="title"
                    placeholder="スレッド名"
                    required
                    id="title-form"
                  />
                  </div>
                  <p style="margin: 0; font-weight: bold;">概要を入力してください：</p>
                  <textarea
                    cols="50"
                    rows="5"
                    name="overview"
                    placeholder="概要"
                    id="overview-form"
                  ></textarea>
                  <select name="anonymous" class="select-anonymous">
                    <option value="anonymous">匿名</option>
                    <option value="username">ユーザー名を表示</option>
                  </select>
                  <button class="start-thread-button">スレッドを作成</button> 
                </div>
          </form>
        </div>
    </body>
</html>